<UserControl x:Class="Prototype.Main.Views.CanvasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prototype.Main.Views"
             xmlns:behaviors="clr-namespace:Prototype.Main.Behaviors"
             xmlns:controls="clr-namespace:Prototype.Main.Controls"
             mc:Ignorable="d" 
             xmlns:canvas="clr-namespace:Prototype.Main.VirtualCanvas"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <controls:VirtualCanvasScrollViewer ProxyOwner="{Binding}" HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    CanContentScroll="True">
            <canvas:DemoDiagram/>

        </controls:VirtualCanvasScrollViewer>
    </Grid>
</UserControl>